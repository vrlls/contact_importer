<section class="vh-100" style="background-color: #508bfc;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Sign up</h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-outline mb-4">
              <%= f.label :email,"Email", class: "form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", id: "typeEmailX-2" %>
            </div>

            <div class="form-outline mb-4">
              <%= f.label :password, class: "form-label" %><br />
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", id: "typePasswordX-2", class: "form-control form-control-lg" %>
            </div>

            <div class="form-outline mb-4">
              <%= f.label :password_confirmation, class: "form-label" %><br />
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "typePasswordX-2", class: "form-control form-control-lg" %>
            </div>

            <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>

            <% end %>

            <%= render "devise/shared/links" %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
